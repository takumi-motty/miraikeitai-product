<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.motty.mapinandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/splash"
        android:label="@string/application_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".CompanyInformationActivity" />
        <activity android:name=".InquiryActivity" />
        <activity android:name=".ConfigurationActivity" />
        <activity android:name=".DetailedInformationActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="4030500" />

        <activity
            android:name=".ContentFileActivity"
            android:label="@string/title_activity_content_file"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ImageFileViewActivity"></activity>
    </application>

</manifest>